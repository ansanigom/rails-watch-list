


<h2 class="container">My Lists</h2>
<div class="box">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
    <div class="container">
    <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('movie_time.jpg') %>)">
    <p><%= list.name %></p>
    </div>
    <% end %>
  <% end %>
